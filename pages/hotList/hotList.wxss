  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  line-height: 22px;
  color:rgba(90,90,90,1);
}
.newInvitation-hot .newInvitation-hotBg-content .hotBg-left-content .hotBg-image{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 10px;
  vertical-align: middle;
}
.newInvitation-hot .newInvitation-hotBg-content .hotBg-left-content text {
  font-size: 12px;
  color: rgba(102,102,102,1);
}
.newInvitation-hot .newInvitation-hotBg-content .hotBg-content-image{
  height:86px;
