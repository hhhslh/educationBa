/* 最新帖子*/
page{
  background:rgba(244,244,244,1);
}
.title-Bg{
  width: 100%;
  height: 190px;
  background-image: url("https://nsi.oss-cn-zhangjiakou.aliyuncs.com/nsi-community/hotBg/hotBg.png");
  background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
}
.newInvitation{
  margin-top: -90px;
  padding: 0 10px;
}
.newInvitation-list-one{
  padding: 14px;
  margin-bottom: 10px;
  background-color: #fff;
  border-radius:8px;
}
.newInvitation-list-one:nth-child(2) {
  display: none;
}
.newInvitation-list-one .newInvitation-content-title{
  font-size: 18px;
  font-weight: bold;
  line-height: 28px;
  margin-bottom: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 2;
  display: -webkit-box;
  -webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.newInvitation .newInvitation-content{
  display: flex;
  overflow: hidden;
}
.newInvitation .newInvitation-content .content-image{
  height: 85px;
  width: 26%;
  margin-top: 5px;
  border-radius: 5px;
}
.newInvitation .newInvitation-content .left-content{
   width: 72%;
   margin-right: 2%;
}
.newInvitation .newInvitation-content .left-content .head-image{
  width:20px;
  height:20px;
  border-radius: 50%;
  margin-right: 10px;
  vertical-align: middle;
}
.newInvitation .newInvitation-content .left-content text{
  font-size: 14px;
  color:rgba(102,102,102,1);
}
.newInvitation .newInvitation-content .left-content .summaryDesc{
  margin-top: 5px;
  overflow: hidden;
  font-weight:400;
  text-overflow: ellipsis;
  line-clamp: 2;
  display: -webkit-box;
  font-size: 16px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
  line-height: 26px;
  color:rgba(74,74,74,1);
}
/* 发布时间及评论 */
.newInvitation .comment{
  height: 25px;
  line-height: 25px;
  display: flex;
  margin-top: 5px;
  color:rgb(78,78,78);
}
.newInvitation .comment .commentIcon{
  margin: 2px 5px 0 15px;
  color:rgba(153,153,153,1);
} 
.newInvitation .comment .commentIcon view{
  font-size:18px !important;
}
.newInvitation .comment .publishTime{
  font-size:14px;
  color:rgba(153,153,153,1);
}
.newInvitation .comment .commentNum{
  font-size:14px;
  color:rgba(153,153,153,1);
}
.widthLong{
  width:100% !important;
}
.widthimg{
  width:0 !important;
  height:0 !important;
}
.van-loading{
  margin: 0 auto;
  display: block !important;
}
.show{
  display: block !important;
}
.hide{
  display: none !important;
}
