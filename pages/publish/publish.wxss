/* pages/publish.wxss */
@import "../../app.wxss";
page{
  height:100%;
  background:#eee;
}
.van-popup{
  width:90%;
  margin:0 auto;
  background:rgba(255,255,255,1);
  border:1px solid rgba(112,112,112,1);
  box-shadow:0px 3px 6px rgba(0,0,0,0.16);
  opacity:1;
  border-radius:4px;
  z-index: 9999;
}
.itemTitle{
  text-align: center;
  font-size:16px;
  font-weight:bold;
  line-height:22px;
  color:rgba(34,34,34,1);
  opacity:1;
  margin:16px 0 24px 0 ;
}
.itemBox{
  padding: 0 20px;
}
.itemBox .itemName{
  padding: 5px 0px;
  width: 28%;
  text-align: center;
  background: rgba(255,255,255,1);
  border: 1px solid rgba(102,102,102,1);
  box-sizing:border-box;
  color: rgba(104,104,104,1);
  opacity: 1;
  border-radius: 4px;
  display: inline-block;
  font-size: 14px;
  font-weight: 400;
  line-height: 20px;
  margin-bottom: 16px;
}
.itemBox .itemName:nth-child(1n){
  margin-right: 8%;
}
.itemBox .itemName:nth-child(3n){
  float: right;
  margin-right:0;
}
.confirm{
  background:rgba(210,210,210,1);
  border:1px solid rgba(210,210,210,1);
  color:rgba(255,255,255,1);
  border-radius:4px;
  padding:12px 20px;
  text-align: center;
  margin: 10px auto 26px;
  font-size:16px;
  font-weight:400;
  line-height:22px;
}
.publishBox{
  padding:10px;
  height:70%;
}
.chooseItem .chooseItemTitle{
  font-size:18px;
  font-weight:500;
  line-height:25px;
  color:rgba(51,51,51,1);
  opacity:1;
  display: inline-block;
}
.chooseItem .chooseContent{
  display: inline-block;
  min-width: 78px;
  height:30px;
  background:rgba(255,255,255,1);
  opacity:1;
  border-radius:4px;
  text-align: center;
}
.chooseItem .chooseContent .itemContent{
  font-size:16px;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-left: 10px;
  line-height: 30px;
}
.chooseItem .chooseContent .icons{
  font-size: 25px;
  vertical-align: middle;
  float: right;
  margin-right: 8px;
  line-height: 30px;
}
.publishContent{
  background:rgba(255,255,255,1);
  opacity:1;
  border-radius:4px;
  /* height:100%; */
  margin:15px 0 150px;
}
.publishContent .fontNumber{
  position: absolute;
  bottom: 0px;
  right: 10px;
  font-size:10px;
  font-weight:400;
  line-height:14px;
  color:rgba(255,125,125,1);
  opacity:1;
  padding-bottom:5px;
}
.publishContent .inputTitle{
  padding:0 10px;
}
.publishContent .inputTitle textarea{
  background:#fff;
  padding:10px;
  border-bottom:2px solid rgba(255,117,117,1);
  opacity:1;
}
.publishContent .editorBox{
  background:#fff;
  border-radius: 5px;
  position:relative;
  height:100%;
}
.publishContent .ql-container{
  padding:10px;
  height:100%;
  padding-bottom:50px;
}
.bottomButton{
  position: fixed;
  bottom: 0px;
  background:rgba(255,255,255,1);
  width: 100%;
  padding:10px 0;
  font-size:14px;
  font-weight:500;
  line-height:20px;
  color:rgba(255,255,255,1);
  opacity:1;
}
.bottomButton .upload{
  float:left;
  margin-left: 10px;
  font-size: 40px;
  line-height: 30px;
}
.bottomButton .submit{
  float:right;
  background:rgba(219,219,219,1);
  opacity:1;
  border-radius:4px;
  padding:5px 25px;
  margin-right:15px;
}
.bottomButton .cancle{
  float:right;
  background:rgba(168,168,168,1);
  opacity:1;
  border-radius:4px;
  padding:5px 25px;
  margin-right:30px;
}

van-radio-group{
  padding: 15px;
  display: inline-block;
}
van-radio{
  display: inline-block;
  width: 33.33%;
  margin: 8px 0;
}