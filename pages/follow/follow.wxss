/* pages/follow.wxss */
.noComment view{
  text-align: center;
  padding:5px 0;
  color:rgb(78,78,78);
}
.follow .follow-list{
  padding: 10px;
  border-bottom: 1px solid rgb(240, 240, 240)
}
.follow .follow-list .follow-left{
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 2;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 24px;
  color: rgb(38,38,38);
}
.follow .follow-list image{
  display: inline-block;
  height: 45px;
  width: 45px;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 15px;
  border: 1px solid rgb(245, 245, 245);
}
.follow .follow-list .ellipsis{
  float: right;
  height: 60px;
  text-align: right;
}
.follow .follow-list .ellipsis view{
  font-size: 25px;
  line-height: 45px;
}
.show{
  display: block !important;
  text-align: center;
}
.hide{
  display: none !important;
}