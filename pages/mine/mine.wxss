/* mine.wxss */
.title-Bg{
  width: 100%;
  height: 190px;
  background-image: url("https://nsi.oss-cn-zhangjiakou.aliyuncs.com/nsi-community/mineBg/mineBg.png");
  background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
}
page {
  height: 100%;
  background: rgb(250, 250, 250)
}
.mine{
  padding:10px 10px;
  background: rgb(250, 250, 250)
}
.mine .mine-center{
  padding:10px;
  background-color: #fff;
  border-radius: 6px;
  margin-top: -70px;
}
.mine .mine-center .mine-center-top{
  text-align: center;
  margin-top: -50px;
}
.mine .mine-center .mine-center-top image{
  display:block;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin: 0 auto ;
  border: 1px solid rgb(250, 250, 250);
  background-color: #fff;
  margin-bottom: 10px;
}
.mine .mine-center .mine-center-top text{
   font-size: 20px;
   font-weight: 700;
   display:block;
   color: rgb(78, 78, 78);
   overflow: hidden;
   display: -webkit-box;
   text-overflow: ellipsis;
   line-clamp: 1;
   -webkit-line-clamp: 1;
   -webkit-box-orient: vertical;
}
.mine .mine-center .mine-center-top .modify{
  margin: 10px 0;
  color: rgb(165, 165, 165);
  font-size: 14px;
}
 .mine .mine-center .integral{ 
  text-align: center; 
  margin-bottom:10px; 
  font-size:14px; 
} 
 .mine .mine-center .integral .dialog-icon{
  font-size: 16px;
  vertical-align: middle;
  margin-left: 5px;
}
.mine .mine-center .integral .van-popup{ 
  padding:30px; 
  border-radius: 5px;
  width:200px;
  height:240px;
} 
.mine .mine-center .integral .scoreRule view:first-of-type{ 
  font-size:18px; 
  margin:0 0 20px; 
} 
.mine .mine-center .integral .scoreRule view:last-of-type{
  margin-bottom:0; 
} 
.mine .mine-center .integral .scoreRule view{ 
  font-size: 16px; 
  /* line-height: 30px;  */
  margin:16px 0;
  color: rgb(38,38,38); 
} 
.mine .mine-center .integral .scoreRule view text{ 
  margin-left:30px; 
} 
.mine .mine-center .mine-center-top .modify .modify-icon{
  font-size: 16px;
  vertical-align: middle;
  margin-left: 5px;
}
.mine .mine-center .mine-center-bttom{
   display: flex;
   text-align: center;
   color: rgb(134, 134, 134)
}
.mine .mine-center .mine-center-bttom .post{
   width: 33.3333333%;
}
.mine .mine-center .mine-center-bttom .post text{
   display: block;
   font-size: 14px;
}
.mine .mine-center .mine-center-bttom .post .num{
   font-weight: 700;
   font-size: 18px;
   color: #000;
}
.mine .mine-center .mine-center-bttom .xian{
   width: 1%;
   line-height:46px;
   color:#ccc;
}
.mine .mine-list{
  background-color: #fff;
  border-radius: 6px;
  margin-top: 20px;
  padding: 0 20px;
}
.mine .mine-list .mine-post{
   height: 60px;
   line-height: 60px;
   border-bottom: 1px solid rgb(240, 240, 240);
   color: rgb(134, 134, 134)
}
.mine .mine-list .mine-post:last-child{
   border-bottom:none;
}
.mine .mine-list .mine-post .icon{
   width: 25px;
   height: 25px;
   vertical-align: middle;
   float: right;
   margin-top: 17px;
}
.mine .mine-btn{
  text-align: center;
  font-size: 12px;
  margin-top: 40px;
  color: rgb(190, 190, 190)
}