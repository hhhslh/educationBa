/* pages/followHomePage/followHomePage.wxss */
.topPart{
  /* text-align: center; */
}
.topPart .avar{
  text-align: center;
}
.topPart image{
  width:100px;
  height:100px;
  border-radius: 50%; 
  border: 1px solid rgb(245, 245, 245);
}
.topPart view{
  margin-top:6px;
  text-align: center;
}
.topPart .name{
  margin:0 10px;
  color:rgb(78,78,78);
  text-align: center;
  display: inline-blcok;
  vertical-align: middle;
}
.topPart .focusOn{
  padding:3px 8px;
  border-radius: 20px;
  font-size: 10px;
}
.focusOnWhite{
  color:#fff;
  padding:3px 8px;
  border-radius: 20px;
  font-size: 10px;
}
.topPart .signature{
  font-size: 14px;
  color:rgb(168, 168, 168);
  margin:10px 0;
  text-align: center;
}
/* 帖子 */
.newInvitation{
  background-color: rgb(250, 250, 250)
}
.newInvitation-list-one{
  padding: 10px 20px;
  margin-bottom: 10px;
  background-color: #fff;
  box-shadow: 0px 2px 0px #eee;
}
.newInvitation-list-one .newInvitation-content-title{
  font-size: 18px;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 2;
  display: -webkit-box;
  -webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
  line-height: 24px;
  color:rgb(38,38,38);
}
.newInvitation .newInvitation-content{
  display: flex;
  overflow: hidden;
  margin-top:5px;
}
.newInvitation .newInvitation-content .content-image{
  height: 80px;
  width: 35%;
  margin-top: 5px;
  border-radius: 5px;
}
.newInvitation .newInvitation-content .left-content{
   width: 72%;
   margin-right: 2%;
}
.newInvitation .newInvitation-content .left-content .head-image{
  width:20px;
  height:20px;
  border-radius: 50%;
  margin-right: 10px;
  vertical-align: middle;
  border: 1px solid rgb(245, 245, 245);
}
.newInvitation .newInvitation-content .left-content text{
  font-size: 14px;
  color: rgb(168, 168, 168)
}
.newInvitation .newInvitation-content .left-content .summaryDesc{
  margin-top: 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 2;
  font-size: 16px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
  line-height: 26px;
  color:rgb(78,78,78);
}
/* 发布时间及评论 */
.newInvitation .comment{
  height: 25px;
  line-height: 25px;
  display: flex;
  margin-top: 5px;
  color:rgb(78,78,78);
}
.newInvitation .comment .commentIcon{
  margin: 2px 5px 0 15px;
} 
.newInvitation .comment .commentIcon view{
  font-size:18px !important;
}
.newInvitation .comment .publishTime{
  font-size:14px;
}
.newInvitation .comment .commentNum{
  font-size:14px;
}
.noPost{
  text-align: center;
  background: #eee;
  padding: 20px;
  color: rgb(78,78,78);
}
/* 评论 */
.commentPart{
  padding: 10px 20px;
  margin-bottom: 10px;
  background-color: #fff;
  box-shadow: 0px 2px 0px #eee;
}
.commentPart .summaryDesc{
  margin-top: 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 3;
  font-size: 16px;
  display: -webkit-box;
  -webkit-line-clamp: 3;
	-webkit-box-orient: vertical;
  line-height: 26px;
  color:rgb(78,78,78);
  display: inline-block;
  margin-left:10px;
}
.commentPart .cardLine image{
  width:25px;
  height:25px;
  border-radius: 50%;
  display: inline-block;
}
/* 发布时间及评论 */
.commentPart .comment{
  height: 25px;
  line-height: 25px;
  display: flex;
  margin-top: 5px;
  color:rgb(78,78,78);
  margin-left:35px;
}
.commentPart .comment .publishTime{
  font-size:14px;
}
.noComment{
  text-align: center;
  background: #eee;
  padding: 20px;
  color: rgb(78,78,78);
}
.widthLong{
  width:100% !important;
}
