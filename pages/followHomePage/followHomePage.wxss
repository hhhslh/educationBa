/* 回答按钮 */
.footInput{
  position: fixed;
  display: flex;
  bottom: 0;
  padding: 10px 0;
  z-index: 22;
  width: 100%;
  background-color: #fff;
  box-shadow:  0 -2px 3px #eee;
}
.footInput input  {
  width: 72%;
  padding:5px 8px 4px;
