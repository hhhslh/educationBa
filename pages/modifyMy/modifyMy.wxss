/* pages/modifyMy.wxss */
.modifyMy{
  padding: 10px 20px;
}
.modifyMy .modifyMy-portrait{
  padding:  10px 0;
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid rgb(240, 240, 240);
}
.modifyMy .modifyMy-portrait text{
  font-size: 18px;
  color: rgb(78, 78, 78);
}
.modifyMy .modifyMy-portrait image{
  width: 50px;
  height: 50px;
  vertical-align: middle;
  border-radius: 50%;
  float: right;
  border: 1px solid rgb(245, 245, 245);
}
.modifyMy .modifyMy-portrait input{
  overflow: visible;
  text-align: right;
  width: 50%;
  float: right;
  margin-top: 15px;
}
.modifyMy .btn{
  margin-top: 20px;
  text-align: center;
  font-size: 18px;
}