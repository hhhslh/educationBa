/* pages/modifyMy.wxss */
.modifyMy{
  padding: 10px 20px;
}
.modifyMy .modifyMy-portrait{
  padding:  10px 0;
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid rgb(240, 240, 240);
}
.modifyMy .modifyMy-portrait text{
  font-size: 18px;
  color: rgb(78, 78, 78);
}
.modifyMy .modifyMy-portrait image{
  width: 50px;
  height: 50px;
  vertical-align: middle;
  border-radius: 50%;
  float: right;
  border: 1px solid rgb(245, 245, 245);
}
.modifyMy .modifyMy-portrait input{
  overflow: visible;
  text-align: right;
  width: 50%;
  float: right;
  margin-top: 15px;
}
.modifyMy .btn{
  height: 50px;
  line-height: 50px;
  width: 50%;
  margin: 20px auto 10px;
  text-align: center;
  font-size: 18px;
  color: #fff;
  border-radius: 6px;
  background-color: #e60c4b;
}



/* 裁剪 */
page{
  width: 100%;
  height: 100%;
}
.titleBar{
  width: 100vw;
  height: 100rpx;
  position: fixed;
  top:0;
  left: 0;
  z-index:100;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
  color:#fff;
  background: #e60c4b;
}

.imgDisposeBlock{
  position: absolute;
  z-index: 99;
  left:0;
  top:0;
  width:100vw;
  height:100vh;
  background: rgb(0, 0, 0);
  overflow: hidden;
}

.imgDisposeArea{
  width:100vw;
  height:90vh;
  overflow: hidden;
  background: #FFF;
}

.imgDisposeControlLine{
  width: 100vw;
  height:10vh;
  position: relative;
  background: #fff;
}

.editBtn{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 240rpx;
  height: 80rpx;
  background: #e60c4b;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  border-radius: 12rpx;
}

.editBtn.reelectBtn{
  left:10%;
}


.editBtn.editPerfectBtn{
  right:10%;
}

.finalCanvasClass{
  position:absolute;
  top:-600%;
  left:0;
  z-index:15;
  transform-origin: left top;
  transform: scale(0.25);
}

.letterCanvasClass{
  position:absolute;
  top:-9999rpx;
  left:0;
  transform-origin: left top;
  transform: scale(0.25);
  z-index: -1;
}

.letterSrcClass{
  position:absolute;
  z-index:1;
  top:0;
  left:0;
  width:100%;
  height:100%;

}

.shadowBlock{
  width:100%;
  height:100%;
  background:#f7f7f7;
  position: absolute;
  top:0;
  left:0;
  z-index: 99;
}

.show{
  display: block;
}
.hide{
  display: none
}