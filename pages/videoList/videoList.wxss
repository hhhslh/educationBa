/* pages/videoDetails.wxss */
.news{
  background-color: rgb(250, 250, 250)
}
.noUnread{
  text-align: center;
  color:rgb(78,78,78);
  margin:30px;
  font-size: 18px;
}
.news .news-list{
  width: 100%;
  display: flex;
  background-color: #fff;
  margin-bottom: 5px;
}
.news .news-list .news-list-right {
  width: 100%;
  padding: 10px;
  line-height: 30px;
}
.news .news-list .news-list-right .news-right-name{
  color: rgb(131, 131, 131);
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 1;
  display: -webkit-box;
  -webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
  line-height: 24px;
  display: flex;
  justify-content: space-between;
}
.news .news-list .news-list-right .news-right-name view{
  display: inline-block;
  vertical-align: middle;
}
.news .news-list .news-list-right .news-right-answer{
  color: rgb(38, 38, 38);
  font-size: 18px;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 2;
  display: -webkit-box;
  -webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
  line-height: 24px;
  padding-right:20px;
  margin-bottom: 10px;
}
.news .news-list .news-list-right .icon{
  margin-right: 6px;
}
.news .news-list .news-list-right .text{
  vertical-align: middle;
}
.news .news-list .news-list-right .news-right-time{
  color: rgb(211, 211, 211);
  font-size: 14px;
}
.loadMore{
  text-align: center;
}
.show{
  display: block !important;
}
.hide{
  display: none !important;
}